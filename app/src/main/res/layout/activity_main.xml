<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:text="quantity"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonPanel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/quantity"
            android:layout_marginTop="6dp"
            android:paddingBottom="16dp"
            android:onClick="increment"
            android:paddingLeft="@+id/quantity_text_view"
            android:text="+" />
        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonPanel"
            android:paddingRight="@+id/buttonPanels"
            android:layout_marginTop="4dp"
            android:paddingTop="16dp"
            android:text="0" />

        <Button
            android:id="@+id/buttonPanels"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/quantity_text_view"
            android:layout_marginTop="6dp"
            android:onClick="decrement"
            android:paddingRight="@+id/q`"
            android:paddingTop="16dp"
            android:text="-" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:text="price"
        android:layout_below="@+id/buttonPanels"
        />


    <TextView
        android:id="@+id/zero_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingTop="16dp"
        android:layout_below="@+id/price"/>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingBottom="16dp"
        android:text="Order"
        android:onClick="submitOrder"
        android:layout_below="@+id/zero_text_view"/>



</LinearLayout>